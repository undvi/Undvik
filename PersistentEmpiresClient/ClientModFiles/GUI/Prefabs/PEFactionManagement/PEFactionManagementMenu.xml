<Prefab>
	<Constants>
		<Constant Name="TypingArea.Height" Value="40" />
		<Constant Name="TypingArea.Width" Value="350" />
		<Constant Name="Button.Height" Value="60" />
		<Constant Name="Button.Margin" Value="10" />
	</Constants>

	<Window>
		<Widget HorizontalAlignment="Center" HeightSizePolicy="StretchToParent" SuggestedWidth="700" MarginBottom="50" MarginTop="50">
			<Children>
				<Standard.Window Parameter.Title="Faction Management">
					<Children>

						<!-- Diplomatie-Optionen -->
						<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="250">
							<Children>

								<!-- Diplomatie-Ãœberschrift -->
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" Brush.FontSize="24" Text="Diplomatic Actions" />

								<!-- Hinweis zum Cooldown -->
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="40"
								            Text="@DiplomacyCooldownRemaining" VerticalAlignment="Center"
								            HorizontalAlignment="Center" IsVisible="@IsCooldownActive"/>

								<!-- Diplomatie-Buttons -->
								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteDeclareDiplomacy"
								              Command.Parameter="DeclareWar"
								              IsEnabled="@CanDeclareDiplomacy" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Declare War" />
									</Children>
								</ButtonWidget>

								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteDeclareDiplomacy"
								              Command.Parameter="MakePeace"
								              IsEnabled="@CanDeclareDiplomacy" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Make Peace" />
									</Children>
								</ButtonWidget>

								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteDeclareDiplomacy"
								              Command.Parameter="TradeAgreement"
								              IsEnabled="@CanDeclareDiplomacy" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Trade Agreement" />
									</Children>
								</ButtonWidget>

								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteDeclareDiplomacy"
								              Command.Parameter="Alliance"
								              IsEnabled="@CanDeclareDiplomacy" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Form Alliance" />
									</Children>
								</ButtonWidget>

								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteDeclareDiplomacy"
								              Command.Parameter="Vassal"
								              IsEnabled="@CanDeclareDiplomacy" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Offer Vassalage" />
									</Children>
								</ButtonWidget>

							</Children>
						</ListPanel>

						<!-- Fraktions-Rang-Upgrade Panel -->
						<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="200">
							<Children>

								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" Brush.FontSize="24" Text="Faction Rank Management" />

								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								            SuggestedHeight="40" Text="Current Rank: @CurrentRank"
								            VerticalAlignment="Center" HorizontalAlignment="Center"/>

								<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true"
								              WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
								              SuggestedHeight="!Button.Height" HorizontalAlignment="Center"
								              Brush="WideButton.Flat" Command.Click="ExecuteUpgradeFaction"
								              IsEnabled="@CanUpgradeRank" MarginBottom="!Button.Margin">
									<Children>
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
										            VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text"
										            Brush.FontSize="22" Text="Upgrade Faction Rank" />
									</Children>
								</ButtonWidget>

							</Children>
						</ListPanel>

					</Children>
				</Standard.Window>
			</Children>
		</Widget>
	</Window>
</Prefab>

